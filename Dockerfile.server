FROM golang:1.23-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Let Go toolchain auto-download required version
ENV GOTOOLCHAIN=auto
RUN go mod download

# Copy source code
COPY src/ ./src/

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags '-extldflags "-static"' -o scooter-server ./src/server/main.go

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/scooter-server .

EXPOSE 50053 50054

ENTRYPOINT ["./scooter-server"]
